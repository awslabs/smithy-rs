set -euxo pipefail

perl -p -i -e 's/ruby2\.4/ruby2.6/' Dockerfile
grep -q 'start of badssl\.test hosts' /etc/hosts || make list-hosts | sudo tee -a /etc/hosts
make serve || true
ls certs/sets/test/gen/crt/ca-root.crt
