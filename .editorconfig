[*.{kt,kts}]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
# Ktlint-specific config
disabled_rules = filename, max-line-length, trailing-comma, argument-list-wrapping, parameter-list-wrapping
